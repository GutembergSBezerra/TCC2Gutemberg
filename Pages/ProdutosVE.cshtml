                                    <label asp-for="Produto.PIS">PIS%</label>
                                    <input asp-for="Produto.PIS" class="form-control" id="PIS" onblur="validatePIS()" maxlength="6" />
                                    <span asp-validation-for="Produto.PIS" class="text-danger"></span>
