@page
@model PortalArcomix.Pages.GestaoProdutoVEModel
@{
    ViewData["Title"] = "Gestão de Produtos";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row align-items-center" style="margin-top: 50px;">
        <div class="col">
            <div class="card">
                <div class="card-body framelogin">
                    <div class="row">
                        <div class="col text-center">
                            <h3 style="color: #1878BB;">Gestão de Produtos</h3>
                            <hr />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <a id="CadastroProdutoBotao" class="btn btn-primary" href="/ProdutoVE" role="button">Cadastrar Novo Produto</a>
                        </div>
                    </div>

                    <hr />

                    <!-- Filter inputs -->
                    <div class="container-fluid">
                        <form method="post">
                            <div class="row">
                                <div class="ms-auto col-md-2">
                                    <input type="text" name="filter" class="form-control" value="@Model.Filter" placeholder="Filtrar" />
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-success">Filtrar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <hr />

                    <!-- Table -->
                    <div class="row">
                        <div class="col">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Marca</th>
                                        <th>Descrição</th>
                                        <th>Gestor de Compras</th>
                                        <th>EAN13</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var produto in Model.Produtos)
                                    {
                                        <tr>
                                            <td>@produto.ID</td>
                                            <td>@produto.Marca</td>
                                            <td>@produto.DescricaoProduto</td>
                                            <td>@produto.GestorCompras</td>
                                            <td>@produto.EAN13</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
    </div>
</div>
<br />

