@page
@model TCC2Gutemberg.Pages.EmpresasSelecionadasModel
@{
    ViewData["Title"] = "Empresas Selecionadas";
}

<div class="container">
    <h2>Empresas Selecionadas</h2>
    <form method="post">
        <div class="row">
            @foreach (var empresa in Model.Empresas)
            {
                <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="empresasSelecionadas" value="@empresa.ID_Empresa"
                        @(Model.EmpresasSelecionadas.Contains(empresa.ID_Empresa) ? "checked" : "")>
                        <label class="form-check-label">
                            @empresa.Nome (@empresa.Ticker)
                        </label>
                    </div>
                </div>
            }
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Salvar Seleção</button>
        </div>
    </form>

</div>
